						<button type="button" onclick="basket(this.form);" class="btn-order basket"><span>장바구니에 담기</span></button>
						<a href="/product_list.go" class="btn" style="padding: 4px 15px;">목록으로</a>
					</div>
				</form>
				
			</td>
		</tr>
		</table>

		<div class="product-detail">
		<c:choose>
			<c:when test="${seq==1}">
