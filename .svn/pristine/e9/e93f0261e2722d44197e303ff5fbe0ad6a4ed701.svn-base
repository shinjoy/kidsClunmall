							<dt>주문금액</dt>	<dd><span id="price">36,000</span>원</dd>
						</dl>
					</c:when>
					<c:when test="${seq==4}">
						<input type="hidden" name="unit" value="5000">
						<input type="hidden" name="delivery" value="3000">
						<input type="hidden" name="buyOption" value="">
